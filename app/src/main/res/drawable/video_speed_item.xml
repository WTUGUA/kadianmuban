        <shape>
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/white"/>
            <corners android:radius="18dp"/>
        </shape>
    </item>
</selector>