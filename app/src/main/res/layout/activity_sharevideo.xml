<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <VideoView
            android:id="@+id/videoPlayer"
            android:layout_width="214dp"
            android:layout_height="380dp"
            android:layout_below="@+id/detail_top_rl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

    <ImageView
            android:id="@+id/background_imgv"
            android:layout_width="214dp"
            android:layout_height="380dp"
            android:layout_below="@+id/detail_top_rl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"/>

    <LinearLayout
            android:id="@+id/detail_top_rl"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/back_imgv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back_circle"
                tools:ignore="ContentDescription"/>
    </LinearLayout>

    <TextView
            android:id="@+id/tv_des1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/videoPlayer"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="分享小视频给好友"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"/>

    <TextView
            android:id="@+id/tv_des2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_des1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="视频已经保存到你的相册，打开QQ或微信"
            android:textColor="?android:textColorPrimary"
            android:textSize="12sp"/>

    <TextView
            android:id="@+id/tv_des3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_des2"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="将这段视频分享给好友吧！"
            android:textColor="?android:textColorPrimary"
            android:textSize="12sp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_des3"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/tv_shareQQ"
                android:layout_width="116dp"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_open_qq"/>

        <ImageView
                android:id="@+id/tv_shareWX"
                android:layout_width="116dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_open_wx"/>
    </LinearLayout>
</RelativeLayout>
