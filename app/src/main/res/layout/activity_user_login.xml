<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="?attr/widgetBackground">

    <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="13dp"
            android:src="@drawable/share_close"
            tools:ignore="ContentDescription"/>

    <TextView
            android:text="登录"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="40dp"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:background="@drawable/bgr_dialog_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_width="match_parent"
                android:layout_height="55dp">

            <EditText
                    android:id="@+id/et_input_phone"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_et_input"
                    android:hint="@string/login_et_phone_hint"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColorHint="#A0A0A0"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    tools:ignore="RtlHardcoded,RtlSymmetry"/>

            <ImageView
                    android:id="@+id/btn_clear"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_close_circle"
                    android:layout_width="32dp"
                    android:padding="6dp"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_width="match_parent"
                android:layout_height="55dp">

            <EditText
                    android:layout_alignParentBottom="true"
                    android:id="@+id/et_input_code"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/shape_et_input"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:hint="@string/login_et_pwd_hint"
                    android:textColorHint="#A0A0A0"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    tools:ignore="RtlHardcoded,RtlSymmetry"/>

            <TextView
                    android:id="@+id/btn_get_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    tools:background="@drawable/bg_btn_download_n"
                    android:text="@string/login_btn_send_code"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    tools:ignore="RtlHardcoded"/>
        </RelativeLayout>

        <TextView
                tools:background="@drawable/bg_btn_download_n"
                android:id="@+id/btn_login"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:text="登录"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:src="@drawable/user_login_btn"
                tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/tv_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="登录即代表同意 隐私协议 和 用户协议"
            android:textColor="#A0A0A0"
            android:textSize="12sp" />

        <TextView
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textSize="15sp"
                android:text="其他登录方式"
                android:textColor="#A0A0A0"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="52dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp">

            <ImageView
                    android:id="@+id/btn_login_qq"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/ic_login_qq"
                    tools:ignore="ContentDescription"/>

            <ImageView
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="22dp"
                    android:id="@+id/btn_login_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/ic_login_wx"
                    tools:ignore="ContentDescription"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

