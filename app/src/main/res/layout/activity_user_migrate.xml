<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="13dp"
            android:src="@drawable/user_login_close"
            tools:ignore="ContentDescription"/>

    <LinearLayout
            android:id="@+id/tv_desc"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_below="@+id/iv_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_marginTop="10dp"
                android:textSize="32sp"
                android:text="提示"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginTop="5dp"
                android:lineSpacingMultiplier="1.3"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:text="为方便账号管理，我们建议您将多个账号信息进行整合，请选择一个账号作为您的主账号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
            android:id="@+id/btn_sel_tel"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="手机号作为主账号"
            tools:background="@drawable/bg_btn_download_n"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    <TextView
            android:id="@+id/btn_sel_third"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="当前账号作为主账号"
            tools:background="@drawable/bg_btn_download_n"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/btn_sel_tel"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
</RelativeLayout>