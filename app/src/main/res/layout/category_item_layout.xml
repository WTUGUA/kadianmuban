<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="2dp"
             android:layout_marginLeft="3dp"
             android:layout_marginRight="3dp"
             android:layout_marginTop="2dp">

    <com.xslczx.widget.RatioImageView
            android:id="@+id/cover_imgv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?widgetBackgroundDark"
            android:scaleType="centerCrop"
            app:riv_height_to_width_ratio="0.667"
            tools:src="@drawable/lw_thumb_h"/>

    <TextView
            android:id="@+id/category_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/alpha_black_40"
            android:gravity="center"
            android:padding="2dp"
            android:text="1111111"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"/>
</FrameLayout>
