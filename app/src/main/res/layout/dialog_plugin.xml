<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="35dp"
        android:paddingBottom="35dp"
        android:background="@drawable/bgr_dialog_plugin"
        android:orientation="vertical">

    <TextView
            android:id="@+id/dialog_title"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="推荐您安装"
            android:textColor="#010001"
            android:textSize="20sp"/>


    <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_plugin_logo"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="视频壁纸桌面组件"
            android:textColor="#3b3440"
            android:textSize="16sp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="20dp"
            android:background="@drawable/bgr_dialog_plugin_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/bgr_dot"/>

            <TextView
                    android:id="@+id/tv_des1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="24dp"
                    android:textColor="#757575"
                    tools:text="减少壁纸消失概率，稳定性可提升90%"/>
        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/bgr_dot"/>

            <TextView
                    android:id="@+id/tv_des2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="24dp"
                    android:textColor="#757575"
                    tools:text="双击唤起设置界面，桌面壁纸一键切换"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/bgr_dot"/>

            <TextView
                    android:id="@+id/tv_des3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="24dp"
                    android:textColor="#757575"
                    tools:text="壁纸声音1s开关，bgm想听就听"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/btn_donwload"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="53dp"
            android:layout_marginRight="53dp"
            android:layout_gravity="bottom|center"
            android:background="@drawable/bgr_dialog_download_plugin"
            android:gravity="center"
            android:text="立即安装"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

    <TextView
            tools:visibility="visible"
            android:id="@+id/btn_set_origin"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="53dp"
            android:layout_marginRight="53dp"
            android:layout_gravity="bottom|center"
            android:background="@drawable/bgr_dialog_download_plugin_green"
            android:gravity="center"
            android:text="先设置桌面看看"
            android:textColor="#05c3eb"
            android:textSize="16sp"
            android:visibility="gone"/>
</LinearLayout>