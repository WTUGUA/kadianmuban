<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5ffffff"
        android:orientation="vertical">

    <LinearLayout
            android:paddingTop="16dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.novv.dzdesk.ui.view.DrawableTextView
                android:id="@+id/btn_share_wx"
                android:textColor="#505050"
                android:textSize="14sp"
                android:gravity="center"
                android:text="微信"
                app:drawableWidth="50dp"
                app:drawableHeight="50dp"
                app:drawableTop="@drawable/share_wxsession_circle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:layout_height="wrap_content"/>
        <com.novv.dzdesk.ui.view.DrawableTextView
                android:id="@+id/btn_share_qq"
                android:textColor="#505050"
                android:textSize="14sp"
                android:gravity="center"
                android:text="QQ好友"
                app:drawableWidth="50dp"
                app:drawableHeight="50dp"
                app:drawableTop="@drawable/share_qq_circle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:layout_height="wrap_content"/>

        <com.novv.dzdesk.ui.view.DrawableTextView
                android:id="@+id/btn_share_more"
                android:textColor="#505050"
                android:textSize="14sp"
                android:gravity="center"
                android:text="更多"
                app:drawableWidth="50dp"
                app:drawableHeight="50dp"
                app:drawableTop="@drawable/share_more_circle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <View style="@style/AppWidget.ShadowGap"/>

    <TextView
            android:id="@+id/btn_close"
            android:textColor="#505050"
            android:gravity="center"
            android:text="取消"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="42dp"/>
</LinearLayout>