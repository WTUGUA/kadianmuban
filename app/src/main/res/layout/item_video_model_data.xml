<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.xslczx.widget.RatioImageView
            android:scaleType="centerCrop"
            app:riv_height_to_width_ratio="1.5"
            android:background="@drawable/shape"
            android:id="@+id/ic_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <ImageView
            android:id="@+id/ic_mask"
            android:layout_gravity="end"
            android:src="@mipmap/ic_mask_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_hot_preview"
        android:layout_gravity="bottom"
        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_hot"
            android:layout_toStartOf="@+id/tv_hot"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            />


        <TextView
            android:id="@+id/tv_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="0"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:layout_marginEnd="9dp"
            />
    </RelativeLayout>
</FrameLayout>