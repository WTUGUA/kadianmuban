<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="1dp">

    <com.xslczx.widget.RatioImageView
            android:id="@+id/video_picker_im_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            app:riv_height_to_width_ratio="1.5"
            tools:src="@drawable/ic_launcher_logo"/>

    <View
            android:id="@+id/video_picker_v_photo_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:background="#88000000"
            android:scaleType="centerInside"
            android:visibility="visible"/>

    <CheckBox
            android:id="@+id/video_picker_cb_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:button="@drawable/picker_select_unchecked"
            android:clickable="false"
            android:contentDescription="@null"/>
</FrameLayout>