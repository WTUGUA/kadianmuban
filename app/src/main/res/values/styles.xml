<resources>

    <style name="HideTheme" parent="android:Theme.NoDisplay">

    </style>

    <!-- App Theme Light -->
    <style name="BaseAppThemeLight" parent="Base.V7.Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="android:listDivider">@color/list_divider_light</item>
        <item name="widgetBackground">@color/widget_background_light</item>
        <item name="widgetBackgroundDark">@color/widget_background_checked_light</item>
        <item name="widgetBackgroundTitle">@android:color/white</item>
        <item name="referenceText">@color/reference_text_light</item>
        <item name="referenceBackground">@drawable/reference_background_light</item>
        <item name="darkTheme">false</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="cardViewStyle">@style/CardViewStyle.Light</item>
    </style>
    <!-- App Theme Dark -->
    <style name="BaseAppThemeDark" parent="Base.V7.Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="android:listDivider">@color/list_divider_dark</item>
        <item name="widgetBackground">@color/widget_background_dark</item>
        <item name="widgetBackgroundDark">@color/widget_background_checked_dark</item>
        <item name="widgetBackgroundTitle">@color/color_primary</item>
        <item name="referenceText">@color/reference_text_dark</item>
        <item name="referenceBackground">@drawable/reference_background_dark</item>
        <item name="darkTheme">true</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="cardViewStyle">@style/CardViewStyle.Light</item>
    </style>

    <style name="OverFlowMenuTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="AppThemeLight" parent="BaseAppThemeLight"/>

    <style name="AppThemeDark" parent="BaseAppThemeDark"/>

    <!-- 启动页主题 -->
    <style name="AppThemeLaunch" parent="AppThemeDark">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppThemeTranslucent" parent="AppThemeDark"/>

    <style name="AutoSpinnerStyle">
        <item name="android:divider">@color/list_divider_dark</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="AppThemeSearch" parent="AppThemeDark">
        <item name="android:windowBackground">@color/color_primary</item>
        <item name="android:dropDownListViewStyle">@style/AutoSpinnerStyle</item>
    </style>

    <style name="updateText">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--activity动画-->
    <style name="activityAnimationUpDown" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/alpha_in</item>
        <item name="android:activityOpenExitAnimation">@anim/alpha_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/alpha_in</item>
        <item name="android:activityCloseExitAnimation">@anim/alpha_out</item>
    </style>

    <!--主页面声音开关样式-->
    <style name="CustomCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@drawable/nav_home_voice</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">@dimen/dp48</item>
        <item name="android:layout_height">@dimen/dp48</item>
        <item name="android:layout_marginLeft">@dimen/dp10</item>
        <item name="android:layout_marginRight">@dimen/dp10</item>
    </style>

    <!--详情面声音开关样式-->
    <style name="DetailCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@drawable/selector_voice</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">@dimen/dp30</item>
        <item name="android:layout_height">@dimen/dp30</item>
    </style>

    <style name="VideoDetailCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@drawable/selector_voice_dark</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">@dimen/dp30</item>
        <item name="android:layout_height">@dimen/dp30</item>
    </style>

    <style name="DownloadCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@drawable/selector_download_check</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">@dimen/dp30</item>
        <item name="android:layout_height">@dimen/dp30</item>
    </style>

    <!-- App Dialog Light -->

    <style name="BaseAppDialogLight" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:listDivider">@color/list_divider_light</item>
        <item name="widgetBackground">@color/widget_background_light</item>
        <item name="widgetBackgroundDark">@color/widget_background_checked_light</item>
        <item name="widgetBackgroundTitle">@android:color/white</item>
    </style>

    <style name="AppDialogLight" parent="BaseAppDialogLight">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/AppAnimation.BottomSheet</item>
    </style>

    <style name="AppDialogLightWhite" parent="AppDialogLight">
        <item name="android:windowBackground">@drawable/bg_dialog_radius_white</item>
    </style>

    <style name="AppDialogDarkDark" parent="AppDialogDark">
        <item name="android:windowBackground">@drawable/bg_dialog_radius_black</item>
    </style>

    <style name="AppDialogActivity" parent="AppDialogLight">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.65</item>
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <!-- App Dialog Dark -->

    <style name="BaseAppDialogDark" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:listDivider">@color/list_divider_dark</item>
        <item name="widgetBackground">@color/widget_background_dark</item>
        <item name="widgetBackgroundDark">@color/widget_background_checked_dark</item>
        <item name="widgetBackgroundTitle">@color/color_primary</item>
    </style>

    <style name="AppDialogDark" parent="BaseAppDialogDark">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/AppAnimation.BottomSheet</item>
    </style>

    <style name="AppAnimation" parent="android:Animation"/>

    <style name="AppAnimation.BottomSheet">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_slide_out</item>
    </style>

    <!--Spinner-->
    <style name="spinner" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- App Widget -->

    <style name="AppWidget" parent="ThemeOverlay.AppCompat.Dark"/>

    <!-- Deep Line -->

    <style name="AppWidget.DeepLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppWidget.DeepLine.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Gap -->

    <style name="AppWidget.ItemGap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
    </style>

    <style name="AppWidget.ShadowGap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/shadow_gap_elevation</item>
        <item name="android:layout_marginBottom">@dimen/shadow_gap_margin_fill</item>
        <item name="android:background">@drawable/gap_shadow</item>
    </style>

    <style name="AppWidget.ShadowGap.Opposite">
        <item name="android:layout_marginTop">@dimen/shadow_gap_margin_fill</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@drawable/gap_shadow_opposite</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="rings_item_set">
        <item name="android:textColor">@color/WHITE</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="CardViewStyle.Light" parent="CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="MyTabLayout">
        <item name="tabMyIndicatorPaddingLeft">0dp</item>
        <item name="tabMyIndicatorPaddingRight">0dp</item>
        <item name="tabMyGravity">0</item>
        <item name="tabMyMode">1</item>
        <item name="tabMyMaxWidth">@dimen/design_tab_max_width</item>
        <item name="tabMyIndicatorColor">?attr/colorAccent</item>
        <item name="tabMyIndicatorHeight">2dp</item>
        <item name="tabMyPaddingStart">12dp</item>
        <item name="tabMyPaddingEnd">12dp</item>
        <item name="tabMyBackground">?attr/selectableItemBackground</item>
        <item name="tabMyTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabMySelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="TabText">
        <item name="android:textSize">15sp</item>
    </style>

    <!--主要是报价的服务使用的转换字体的-->
    <style name="text_style_black">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dialog_text_normal</item>
    </style>    <!--    <item name="android:textStyle">italic</item>-->
    <style name="text_style_orange">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/dialog_text_orange</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowShowAnimation">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@anim/ad_dialog_out</item>
    </style>

    <style name="ThemeActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>
    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/ad_dialog_out</item>
    </style>
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowAnimationStyle">@style/AppAnimation.BottomSheet</item>
    </style>
    <!--对话框样式-->
    <style name="mdialog" parent="android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景昏暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>


</resources>
